<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- إزالة Logstash Appender نهائياً من الاختبارات -->

    <!-- Pattern للاختبارات فقط -->
    <property name="CONSOLE_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- Appender Console فقط -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- تعطيل Logstash تماماً في الاختبارات -->

    <logger name="com.example.demo" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>